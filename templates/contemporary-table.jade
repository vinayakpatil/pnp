          li
            a.th(href='')
              img(src='imgs/furniture/accent-tables/contemporary-side.jpg', alt='contemporary-side')
          li
            a.th(href='')
              img(src='imgs/furniture/accent-tables/baldwin-solid-wood-sofa2.jpg', alt='baldwin-solid-wood-sofa.jpg')
          li
            a.th(href='')
              img(src='imgs/furniture/accent-tables/contemporary-side2.jpg', alt='contemporary-side2')
      // Controls
      a.jcarousel-prev(href='#')
      a.jcarousel-next(href='#')

