// Extend Default page layout
extends layout
// Change title of page
block prepend headTag
  title Peacocks and Paisleys | Checkout
// Change page content
block content
  section.row
    ul.breadcrumbs
      li
        a(href='index.html') Home
      li
        a(href='#') Shopping Cart
      li.current
        a(href='#') Checkout
  section.row.checkout.collapse
    h1 Checkout
    div.row.collapse
      dl.accordion.columns.large-9(data-accordion='')
        dd
          a(href='#panel1') Step 1: Checkout Options
          #panel1.content.active.divider
            .row
              div.columns.large-6
                h4
                  | New Customer
                  small
                    | Checkout Options:
                input#register(type='radio')
                label(for='register') Register Account
                p
                 | By creating an account you will be able to shop faster, be up tp date on an orderâ€™s status, and keep track of the orders you have previously made
                input.button.primary(type="submit", value="Continue")
              div.columns.large-6
                form
                  .row.collapse
                    h4
                      | Returning Customer
                      small
                        | I am a returning customer
                    .row.collapse
                      .large-7.columns
                        label
                          | Email:
                          input(type='email', placeholder='abcd@abcd.com')
                    .row.collapse
                      .large-7.columns
                        label
                          | Password:
                          input(type='password', placeholder='password')
                      .large-5.columns.absoluteCenter
                        a(href='#') Forgot Password ?
                    .row.collapse
                      .large-12.columns
                        input.button.primary(type='submit', value='Continue')
        dd
          a(href='#panel2') Step 2: Account & Billing Details
          #panel2.content
            .row
              div.columns.large-6
                h4
                  | Your Personal Details
                form
                  .row.collapse
                    .large-12.columns
                      label
                        | First Name:
                        input(type='text', placeholder='abcd')
                    .large-12.columns
                      label
                        | Last Name:
                        input(type='text', placeholder='abcd')
                    .large-12.columns
                      label
                        | Email:
                        input(type='email', placeholder='abcd@abcd.com')
                    .large-12.columns
                      label
                        | Telephone:
                        input(type='text', placeholder='965-123-1010')
                    .large-12.columns
                      label
                        | Fax:
                        input(type='text', placeholder='965-123-1010')
              div.columns.large-6
                form
                  .row.collapse
                    h4
                      | Your Address
                    .large-12.columns
                      label
                        | Company:
                        input(type='text', placeholder='abcd')
                    .large-12.columns
                      label
                        | Address:
                        textarea(placeholder='abcd')
                    .large-12.columns
                      label
                        | City:
                        input(type='text', placeholder='Kuwait')
                    .large-12.columns
                      label
                        | Country:
                        input(type='text', placeholder='Kuwait')
                    .large-12.columns
                      label
                        | Post Code:
                        input(type='text', placeholder='Kuwait')
                    .large-12.columns
                      label(for='addressConfirmation')
                        input(type='checkbox', id='addressConfirmation')
                        | My delivery address and billing addresses are the same.
            hr.row
            .row
              .large-6.columns.large-offset-6.text-right
                input.button.primary(type='submit', value='Continue')
        dd
          a(href='#panel3') Step 3: Delivery Details
          #panel3.content.divider.deliveryDetails
            .row
              div.columns.large-6
                h4
                  | Select an existing address
                div
                  input#shippingAddress1(type='radio', name='shippingAddress', checked='checked')
                  label(for='shippingAddress1') Address 1
                  address
                    |Fay Al Hassawi <br>
                    |Heba Al Homaizi Complex <br>
                    |Behind City Center & near Home Center <br>
                    |Industrial Shuwaikh <br>
                    |Kuwait <br>
                    |+965 6990 9463
                div
                  input#shippingAddress2(type='radio', , name='shippingAddress')
                  label(for='shippingAddress2') Address 2
                  address
                    |Fay Al Hassawi <br>
                    |Heba Al Homaizi Complex <br>
                    |Behind City Center & near Home Center <br>
                    |Industrial Shuwaikh <br>
                    |Kuwait <br>
                    |+965 6990 9463
              div.columns.large-6
                form
                  .row
                    h4
                      | Enter a new address
                    .large-12.columns
                      label
                        | Name:
                        input(type='text', placeholder='abcd')
                    .large-12.columns
                      label
                        | Phone:
                        input(type='text', placeholder='000-000-0000')
                    .large-12.columns
                      label
                        | Address:
                        textarea(placeholder='abcd')
                    .large-12.columns
                      label
                        | City:
                        input(type='text', placeholder='Kuwait')
                    .large-12.columns
                      label
                        | Country:
                        input(type='text', placeholder='Kuwait')
                    .large-12.columns
                      label
                        | Post Code:
                        select
                          option 12345
                          option 48220
            footer
              hr.row
              .row
                .large-6.columns.large-offset-6.text-right
                  input.button.primary(type='submit', value='Continue')
        dd
          a(href='#panel4') Step 4: Payment Method
          #panel4.content
            .tabContainer.row.collapse
              .columns.large-3
                dl.tabs.vertical(data-tab='')
                  dd.active
                    a(href='#panel1a') Credit Card
                  dd
                    a(href='#panel2a') Debit Card
                  dd
                    a(href='#panel3a') Cash on Delivery
              .columns.large-9
                .tabs-content.vertical
                  #panel1a.content.active
                    h4
                      |Pay using your Visa/Master Card
                    form
                      .row.collapse
                        .large-4.columns
                          label
                            | Card Number:
                        .large-7.columns.end
                          input(type='text')
                      .row.collapse
                        .large-4.columns
                          label
                            | Name on Card:
                        .large-7.columns.end
                          input(type='text')
                      .row.collapse
                        .large-4.columns
                          label
                            | Expiry Date:
                        .large-7.columns.end
                          .row.collapse
                            .large-6.columns
                              select
                                option Select Month
                            .large-1.columns.separator
                              | /
                            .large-5.columns
                              select
                                option Select Year
                      .row.collapse
                        .large-4.columns
                          label
                            | CVV Number:
                        .large-7.columns.end
                          .row.collapse
                            .large-4.columns
                              input(type='text')
                            .large-8.columns.cvv
                              img(src="../imgs/cvv.png", alt="CVV number")
                              span 3 digit CVV number
                      .row.collapse
                        .large-7.columns.large-offset-4
                          span.price
                            |Amount Due: 305.000KD
                  #panel2a.content
                    h4
                      |Pay using your Debit Card
                  #panel3a.content
                    h4
                      |Pay by Cash on Delivery
            footer.row.collapse.payment
              .large-9.large-offset-3
                .row.collapse
                  .large-8.columns.note
                    strong Note:
                    |&nbsp; On clicking 'Make Payment' you will be redirected to the payment gateway.
                    | Please do not close the browser window or press back button.
                  .large-4.columns.text-right
                    input.button.primary(type='submit', value='Continue')
      div.columns.large-3.cart-summary
        h4 CART SUMMARY / 2 ITEM
        .rowContainer
          .row.collapse
            .large-8.columns
              a(href='#')
                |Traditional Side Table
              span
                | Colour: Brown &nbsp; QTY:1
            .large-4.columns
              span 185.300KD
          .row.collapse
            .large-8.columns
              a(href='#')
               |Traditional Side Table
              span
                | Colour: Brown &nbsp; QTY:1
            .large-4.columns
              span 185.300KD
          .row.collapse
            .row.collapse
              .large-8.columns
                h6 Sub-Total:
              .large-4.columns
                span 370.600KD
            .row.collapse
              .large-8.columns
                h6 Shipping:
              .large-4.columns
                span 10.000KD
          .row.collapse.total
            .large-8.columns
              h6 Grand Total:
            .large-4.columns
              span 380.600KD










